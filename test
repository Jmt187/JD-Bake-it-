#include <SPI.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

// OLED Display Configuration
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 32
#define OLED_RESET     -1
#define SCREEN_ADDRESS 0x3C

Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

// Potentiometer Pin Definitions
#define ROTARY_POT_PIN  A3   // rotary potentiometer on A3
#define LINEAR_POT_PIN  A2   // linear potentiometer on A2

// Threshold values for analog inputs
#define ROTARY_THRESHOLD 300
#define LINEAR_THRESHOLD 200

// Analog input edge-trigger tracking
bool rotaryTriggered = false;
bool linearTriggered = false;

// Score variable
int score = 0;

void setup() {
  Serial.begin(9600);

  // Analog pins are inputs by default, but explicit is fine
  pinMode(ROTARY_POT_PIN, INPUT);
  pinMode(LINEAR_POT_PIN, INPUT);

  // Initialize I2C communication
  Wire.begin();

  // Initialize OLED display
  if (!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }

  display.clearDisplay();
  displayScore();

  Serial.println(F("Potentiometer Score Counter Initialized"));
  Serial.println(F("Score: 0"));
}

void loop() {
  handleRotaryPot();
  handleLinearPot();
}

/**
 * Handle rotary potentiometer input
 * Increments score once per threshold crossing.
 */
void handleRotaryPot() {
  int rotaryValue = analogRead(ROTARY_POT_PIN);

  if (rotaryValue > ROTARY_THRESHOLD && !rotaryTriggered) {
    score++;
    rotaryTriggered = true;

    displayScore();

    Serial.print(F("Rotary pot triggered! Value: "));
    Serial.print(rotaryValue);
    Serial.print(F(", Score: "));
    Serial.println(score);
  }
  else if (rotaryValue <= ROTARY_THRESHOLD) {
    rotaryTriggered = false; // reset when back below threshold
  }
}

/**
 * Handle linear potentiometer input
 * Increments score once per threshold crossing.
 */
void handleLinearPot() {
  int linearValue = analogRead(LINEAR_POT_PIN);

  if (linearValue > LINEAR_THRESHOLD && !linearTriggered) {
    score++;
    linearTriggered = true;

    displayScore();

    Serial.print(F("Linear pot triggered! Value: "));
    Serial.print(linearValue);
    Serial.print(F(", Score: "));
    Serial.println(score);
  }
  else if (linearValue <= LINEAR_THRESHOLD) {
    linearTriggered = false; // reset when back below threshold
  }
}

/**
 * Display the current score on the OLED
 */
void displayScore() {
  display.clearDisplay();

  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(0, 0);
  display.println(F("Score:"));

  display.setTextSize(2);
  display.setCursor(0, 12);
  display.print(score);

  display.display();
}
